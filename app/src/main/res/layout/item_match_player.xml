<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable name="matchPlayer" type="com.example.alf.data.model.match.MatchPlayer" />
        <variable name="inStart" type="Boolean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:layout_marginVertical="@dimen/card_margin_half">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="75dp"
                android:layout_height="105dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_player_photo"
                android:scaleType="centerCrop"
                app:imageSrc="@{matchPlayer.player}"/>

            <ImageView
                android:id="@+id/start_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin_half"
                android:contentDescription="@string/content_description_event_type"
                android:src="@{inStart}"/>

            <TextView
                android:id="@+id/in_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/start_icon"
                android:layout_marginEnd="@dimen/card_margin"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:visibility="@{matchPlayer.inForPlayer != null ? View.VISIBLE : View.GONE}"
                android:text="@{String.format(@string/in_for, matchPlayer.inForPlayer.lastName)}"
                app:drawableEndCompat="@drawable/ic_substitution_in"/>

            <TextView
                android:id="@+id/out_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/in_for"
                android:layout_marginEnd="@dimen/card_margin"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:visibility="@{matchPlayer.outForPlayer != null ? View.VISIBLE : View.GONE}"
                android:text="@{String.format(@string/out_for, matchPlayer.outForPlayer.lastName)}"
                app:drawableEndCompat="@drawable/ic_substitution_out"/>

            <TextView
                android:id="@+id/field_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/out_for"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin_half"
                android:textSize="@dimen/text_size_medium"
                android:padding="4dp"
                android:visibility="@{matchPlayer.fieldPosition != null ? View.VISIBLE : View.GONE}"
                android:text="@{matchPlayer.fieldPosition.shortName}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/photo"
                android:layout_toStartOf="@id/field_position"
                android:layout_margin="@dimen/card_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@{matchPlayer.player.lastName}"/>

                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_small"
                    android:text="@{matchPlayer.player.firstName}"/>

                <TextView
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_small"
                    android:text="@{matchPlayer.playerRole.name}"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>