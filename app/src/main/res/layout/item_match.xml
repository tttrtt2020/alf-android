<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="match" type="com.example.alf.data.model.Match" />
        <variable name="adapter" type="com.example.alf.ui.matches.MatchesPagingAdapter"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin"
        android:layout_marginVertical="@dimen/card_margin_half"
        android:onClick="@{() -> adapter.onMatchClick(match)}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">

            <LinearLayout
                android:id="@+id/result_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@{match.status.equalsIgnoreCase(match.STATUS_FINISHED) ? (match.resultHostGoals.toString() + ` : ` + match.resultGuestGoals.toString()) : @string/match_result_unknown}" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textSize="12sp"
                    android:text="@{adapter.formatDate(match.dateTime)}" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@{adapter.formatTime(match.dateTime)}" />

            </LinearLayout>

            <ImageView
                android:id="@+id/host_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/card_margin"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_description_team_logo"
                app:imageUrl="@{adapter.buildTeamLogoUrl(match.hostMatchTeam.team)}"/>

            <ImageView
                android:id="@+id/guest_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/content_description_team_logo"
                app:imageUrl="@{adapter.buildTeamLogoUrl(match.guestMatchTeam.team)}" />

            <TextView
                android:id="@+id/host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/host_logo"
                android:layout_toStartOf="@id/result_layout"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@{match.hostMatchTeam.team.name}" />

            <TextView
                android:id="@+id/guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/guest_logo"
                android:layout_toEndOf="@id/result_layout"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@{match.guestMatchTeam.team.name}" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>